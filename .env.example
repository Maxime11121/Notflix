# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=5000
NODE_ENV=development

# ============================================
# DATABASE
# ============================================
# MongoDB Connection String
# Local: mongodb://localhost:27017/notflix
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/notflix
MONGODB_URI=mongodb://localhost:27017/notflix

# ============================================
# AUTHENTICATION
# ============================================
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-characters

# JWT Token Expiration (7d = 7 days, 1h = 1 hour)
JWT_EXPIRE=7d

# ============================================
# TMDB API (The Movie Database)
# ============================================
# Get free API key from: https://www.themoviedb.org/settings/api
TMDB_API_KEY=your-tmdb-api-key-here

# ============================================
# FRONTEND URL
# ============================================
# Development
FRONTEND_URL=http://localhost:5000

# Production (update when deployed)
# FRONTEND_URL=https://your-domain.com

# ============================================
# PUSH NOTIFICATIONS (VAPID Keys)
# ============================================
# Generate with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:your-email@example.com

# ============================================
# EMAIL SERVICE (Optional)
# ============================================
# For Gmail: Enable "Less secure app access" or use App Password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ============================================
# REDIS (Optional - for sessions/caching)
# ============================================
# Local Redis
REDIS_URL=redis://localhost:6379

# Cloud Redis (e.g., Redis Cloud)
# REDIS_URL=redis://username:password@host:port

# ============================================
# OPENSUBTITLES API (Optional)
# ============================================
# Get API key from: https://www.opensubtitles.com/en/consumers
OPENSUBTITLES_API_KEY=your-opensubtitles-api-key

# ============================================
# SECURITY
# ============================================
# CORS Allowed Origins (comma-separated)
CORS_ORIGIN=http://localhost:5000,http://localhost:3000

# Rate Limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# ============================================
# STORAGE (Optional - for avatars/images)
# ============================================
# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=notflix-uploads

# Cloudinary (Alternative)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ============================================
# ANALYTICS (Optional)
# ============================================
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
# Options: error, warn, info, debug

# ============================================
# SESSION
# ============================================
SESSION_SECRET=your-session-secret-min-32-characters
SESSION_MAX_AGE=86400000

# ============================================
# PAYMENT (Optional - for premium features)
# ============================================
# Stripe
STRIPE_PUBLIC_KEY=pk_test_xxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxx

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_SECRET=your-paypal-secret